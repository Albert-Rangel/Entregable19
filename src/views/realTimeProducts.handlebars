<form id="formProduct" class="form">
    <h2>Formulario de Registro de nuevos productos</h2>
    <input class="controls" type="text" name="title" id="title" placeholder="Ingrese Nombre del Producto" required>
    <input class="controls" type="text" name="description" id="description" placeholder="Ingrese la descripcion"
        required>
    <input class="controls" type="number" name="stock" id="stock"
        placeholder="Ingrese la cantidad que tiene de producto" required>
    <input class="controls" type="text" name="thumbnail" id="thumbnail" placeholder="Ingrese una imagen url" required>

    <input class="controls" type="text" name="category" id="category" placeholder="Ingrese la categoria" required>
    <input class="controls" type="number" name="price" id="price" placeholder="Ingrese su precio" required>
    <input class="controls" type="text" name="code" id="code" placeholder="Ingrese el codigo del producto (string)"
        required>
    <div class="form-group row">
        <label>Status</label>
        <input class="general" type="checkbox" placeholder="Status" name="status" id="status" />
    </div>
    <button class="botons" type="submit" id="add-btn">Registrar </button>
    <h2> Para eliminar un producto ingrese acontinuacion el id:</h2>
    <input class="controls" type="text" name="ProductID" id="ProductID"
        placeholder="Ingrese id del producto a eliminar">
    <button class="botons" type="button" id="deleteBoton">Eliminar</button>
    <span id="email" hidden="hidden">{{email}}</span>
    <span id="id" hidden="hidden">{{id}}</span>



    <p class="message">Wanna go Back?<a href="http://localhost:8080/products">Return to Main Catalog</a></p>

</form>


<form id="formupdProduct" class="form">
    <h2>Formulario de actualizacion de productos</h2>
    <input class="controls" type="text" name="pidupd" id="pidupd" placeholder="Ingrese el id del Producto">
    <input class="controls" type="text" name="titleupd" id="titleupd" placeholder="Ingrese Nombre del Producto">
    <input class="controls" type="text" name="descriptionupd" id="descriptionupd" placeholder="Ingrese la descripcion">
    <input class="controls" type="number" name="stockupd" id="stockupd"
        placeholder="Ingrese la cantidad que tiene de producto">
    <input class="controls" type="text" name="thumbnailupd" id="thumbnailupd" placeholder="Ingrese una imagen url">
    <input class="controls" type="text" name="categoryupd" id="categoryupd" placeholder="Ingrese la categoria">
    <input class="controls" type="number" name="priceupd" id="priceupd" placeholder="Ingrese su precio">
    <input class="controls" type="text" name="codeupd" id="codeupd" placeholder="Ingrese el codigo del producto (string)">
    <div class="form-group row">
        <label>Status</label>
        <input class="general" type="checkbox" placeholder="Status" name="statusupd" id="statusupd" />
    </div>
    <button class="botons" type="submit" id="upd-btn">Actualizar </button>

    <p class="message">Wanna go Back?<a href="http://localhost:8080/products">Return to Main Catalog</a></p>

</form>



